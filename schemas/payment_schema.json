{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Payment Response Schema",
  "type": "object",
  "required": [
    "transaction_id",
    "amount",
    "currency",
    "status",
    "timestamp"
  ],
  "properties": {
    "transaction_id": {
      "type": "string",
      "description": "Unique transaction identifier",
      "pattern": "^[A-Z0-9-]+$"
    },
    "amount": {
      "type": "number",
      "description": "Payment amount",
      "minimum": 0,
      "exclusiveMinimum": true
    },
    "currency": {
      "type": "string",
      "description": "ISO 4217 currency code",
      "minLength": 3,
      "maxLength": 3,
      "pattern": "^[A-Z]{3}$"
    },
    "status": {
      "type": "string",
      "description": "Payment status",
      "enum": [
        "pending",
        "processing",
        "completed",
        "failed",
        "cancelled",
        "refunded"
      ]
    },
    "payment_method": {
      "type": "string",
      "description": "Payment method used",
      "enum": [
        "card",
        "mobile_money",
        "bank_transfer",
        "wallet"
      ]
    },
    "merchant_id": {
      "type": "string",
      "description": "Merchant identifier"
    },
    "customer": {
      "type": "object",
      "properties": {
        "name": {
          "type": "string"
        },
        "email": {
          "type": "string",
          "format": "email"
        },
        "phone": {
          "type": "string",
          "pattern": "^\\+?[1-9]\\d{1,14}$"
        }
      }
    },
    "timestamp": {
      "type": "string",
      "description": "Transaction timestamp",
      "format": "date-time"
    },
    "description": {
      "type": "string",
      "description": "Payment description"
    },
    "metadata": {
      "type": "object",
      "description": "Additional metadata"
    }
  }
}
