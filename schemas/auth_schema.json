{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Authentication Response Schema",
  "type": "object",
  "required": [
    "access_token",
    "token_type",
    "expires_in"
  ],
  "properties": {
    "access_token": {
      "type": "string",
      "description": "JWT access token"
    },
    "refresh_token": {
      "type": "string",
      "description": "JWT refresh token"
    },
    "token_type": {
      "type": "string",
      "description": "Token type",
      "enum": [
        "Bearer"
      ]
    },
    "expires_in": {
      "type": "integer",
      "description": "Token expiration time in seconds",
      "minimum": 0
    },
    "scope": {
      "type": "string",
      "description": "Token scope"
    },
    "user": {
      "type": "object",
      "properties": {
        "user_id": {
          "type": "string"
        },
        "username": {
          "type": "string"
        },
        "email": {
          "type": "string",
          "format": "email"
        }
      }
    }
  }
}
